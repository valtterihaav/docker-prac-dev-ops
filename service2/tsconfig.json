{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["dom", "es6"],
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "paths": {
        "@/*": [
          "./*"
        ]
      }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "files": [
        "app.ts"
    ]
  }